@page
@model DoAn_KTLT_2022.Pages.MH_LoaiHangModel
@using DoAn_KTLT_2022.Entities
@using DoAn_KTLT_2022.Services
@{
}
<div class="container mb-3">
    <div class="row">
        <div class="col-8">
            <h1 class="">Loại hàng <a href="/MH_Tao_LoaiHang" class="btn btn-warning text-dark"><b>Thêm mới Loại hàng +</b></a></h1>

        </div>
        <div class="col-4">
            <form method="post">
                <div class="form-group">
                    <input type="text" class="form-control" name="tuKhoa" value="" placeholder="Nhập từ khóa">
                </div>
                <div class="form-group">
                    <button type="submit" class="form-control btn btn-dark mt-2" value="">Tìm kiếm <i class="fa fa-search"></i></button>
                </div>
            </form>
        </div>
    </div>
</div>


<table class="table table-dark table-striped table-hover mt-4 text-center">
    <tr>       
        <th class=col-1>STT</th>
        <th class="col-6">Loại hàng</th>        
        <th class="col-3">Số lượng mặt hàng </th>        
        <th class="col-2">Thao tác</th>
    </tr>
    @for(int i = 0; i < @Model.dsLoaiHang.Count; i++)
    {
        int j = i + 1;
        <tr> 
            <td>@j</td>
            <td>@Model.dsLoaiHang[i]</td>
            <td>@Model.countMH[i] </td>
            <td>
                <a href="/MH_XoaLoaiHang?index=@i" class="btn btn-danger">Xóa</a>
                <a href="/MH_SuaLoaiHang?index=@i" class="btn btn-primary">Sửa</a>
            </td>
        </tr>
    }
</table>
